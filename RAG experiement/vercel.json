{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "API_BASE": "/api",
    "EMBEDDING_MODEL": "text-embedding-3-large",
    "GPT_MODEL": "gpt-4o-mini",
    "CHUNK_SIZE": "800",
    "CHUNK_OVERLAP": "120",
    "MAX_CONTEXT_CHUNKS": "6",
    "MAX_UPLOAD_SIZE_MB": "25"
  }
}
