# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gmail_auto_tagger
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Gmail OAuth 2.0 Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Google Cloud Pub/Sub
GOOGLE_PUBSUB_TOPIC=gmail-push-notifications
GOOGLE_PUBSUB_SUBSCRIPTION=gmail-push-subscription
GOOGLE_PROJECT_ID=your_gcp_project_id

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Note: OpenAI API keys are NOT stored on backend
# Users provide their own API keys which are stored locally in their browser
